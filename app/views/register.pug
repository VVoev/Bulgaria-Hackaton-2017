extends index

block main
    .col-lg-4.col-md-6
        h1 Register here:
            form(action="/register" method="post" name="registerForm")
                input(type='hidden', name='_csrf', value=_csrf)
                .form-group
                    label(for="tb-firstname") First Name
                    input.form-control(type="text" id="tb-firstname" name="firstName" placeholder="Enter First Name" required)
                .form-group
                    label(for="tb-lastname") Last Name
                    input.form-control(type="text" id="tb-lastname" name="lastName" placeholder="Enter Last Name" required)
                .form-group
                    label(for="tb-username") Username
                    input.form-control(type="text" id="tb-username" name="username" placeholder="Enter Username" required)
                .form-group
                    label(for="tb-password") Password
                    input.form-control(type="password" id="tb-password" name="password" placeholder="Enter Password" required)
                .form-group
                    label(for="tb-confirm") Confirm Password
                    input.form-control(type="password" id="tb-confirm" placeholder="Confirm your Password" required name="confirm")
                input.btn.btn-danger.index(type="submit" value="Register")